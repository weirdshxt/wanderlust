<% layout("./layouts/boilerplate.ejs") %>

<div id="main">
  <div id="filters">
    <div class="filter" onclick="filterByCategory('rooms', this)">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter" onclick="filterByCategory('pools', this)">
      <i class="fa-solid fa-water-ladder"></i>
      <p>Pools</p>
    </div>
    <div class="filter" onclick="filterByCategory('lakes', this)">
      <i class="fa-solid fa-water"></i>
      <p>Lakefront</p>
    </div>
    <div class="filter" onclick="filterByCategory('farm', this)">
      <i class="fa-solid fa-tractor"></i>
      <p>Farm</p>
    </div>
    <div class="filter" onclick="filterByCategory('castles', this)">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div class="filter" onclick="filterByCategory('beach', this)">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beachfront</p>
    </div>
    <div class="filter" onclick="filterByCategory('arctic', this)">
      <i class="fa-solid fa-snowman"></i>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="form-check-reverse form-switch">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
    </div>
  </div>

  <br />
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for( let listing of allListings) {%>
    <a class="listing-link" href="/listings/<%= listing._id %>">
      <div class="card col listing-card">
        <img src="<%= listing.image.url  %>" class="card-img-top" alt="listing-images" style="height: 20rem" />
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
          <p class="card-text"><b>&#8377;<%= listing.price.toLocaleString("en-in") %></b>/night &nbsp; <i class="tax-info">+18% GST</i></p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>


